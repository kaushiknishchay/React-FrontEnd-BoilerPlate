{
  "name": "react-frontend-boilerplate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.1.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/registerServiceWorker.js",
      "!src/**/index.jsx"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "react-scripts test --env=jsdom --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "eject": "react-scripts eject",
    "lint": "(eslint --ext=js --ext=jsx . ) && echo Lint Passed! ALL Clear! ‚ù§",
    "precommit": "yarn lint",
    "git": "git add . && git cz",
    "git-push": "yarn git && git push origin master"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.11",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0"
  },
  "eslintIgnore": [
    "registerServiceWorker.js"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
